---
import { IProjectDetails } from "@types";
const { projectDetail } = Astro.props as IProjectDetails;
const { title, description, thumbnail, liveUrl, githubUrl } = projectDetail;
---

<article class="w-full max-h-[25rem] overflow-hidden relative group">
  <h3 class="text-xl dark:text-light mb-6">{title}</h3>
  <p class="dark:text-light mb-6">{description}</p>
  <div class="flex items-center absolute right-4 top-[114px] z-10">
    {
      githubUrl && (
        <a
          href={githubUrl}
          class="text-white link p-3 bg-black/50 rounded-full backdrop-blur-md"
          aria-label="Social Media"
          target="_blank"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="feather feather-github"
          >
            <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22" />
          </svg>
        </a>
      )
    }
  </div>
  <a href={liveUrl}>
    <img
      src={thumbnail}
      class="w-full h-auto hover:scale-105 transition duration-[1s]"
      loading="lazy"
      width="100%"
      height="100%"
      alt={title}
    />
  </a>
</article>
